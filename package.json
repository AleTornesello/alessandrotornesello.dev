{
  "name": "tests-sass-vanilla",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "serve": "live-server --open=./public/",
    "sass:watch": "sass ./src/scss/main.scss ./public/css/style.css --watch",
    "sass": "sass ./src/scss/main.scss ./public/css/style.css",
    "build": "npm-run-all --sequential sass concat compress",
    "compress": "csso ./public/css/style.css -o ./public/css/style.css && csso ./public/css/vendors.css -o ./public/css/vendors.css --comments none",
    "concat": "concat -o ./public/css/vendors.css ./src/vendors/fontawesome/fontawesome.min.css ./src/vendors/fontawesome/solid.min.css  ./src/vendors/fontawesome/brands.min.css"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "concat": "^1.0.3",
    "csso-cli": "^4.0.2",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "sass": "^1.75.0"
  }
}
